{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2020",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2020", "dom"],
        "paths": {
            "@customer-view/*": ["src/app/customer-view/*"],
            "@management-view/*": ["src/app/management-view/*"],
            "@enums/*": ["src/app/_enums/*"],
            "@functions/*": ["src/app/_functions/*"],
            "@guards/*": ["src/app/_guards/*"],
            "@interfaces/*": ["src/app/_interfaces/*"],
            "@models/*": ["src/app/_models/*"],
            "@components/*": ["src/app/_components/*"],
            "@services/*": ["src/app/_services/*"],
            "@environments/*": ["src/environments/*"],
            "@grapecity/*": ["../node_modules/@grapecity/*"],
            "jszip": ["../node_modules/jszip/dist/jszip.js"]
        }
    }
}
